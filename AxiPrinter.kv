#:kivy 1.0
Root:
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Pen Down'
                    size_hint: (None, None)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                MySlider:
                    id: pen_down_slider
                    min: 0
                    max: 100
                    value: 30
                    orientation: 'vertical'
                    on_release: root.setPenDown(pen_down_slider.value)
                        
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Pen Up'
                    size_hint: (None, None)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                MySlider:
                    id: pen_up_slider
                    min: 0
                    max: 100
                    value: 60
                    orientation: 'vertical'
                    on_release: root.setPenUp(pen_up_slider.value)

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: dp(2)

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: dp(2)

                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'Coorners'
                        size_hint: (None, None)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    BoxLayout:
                        orientation: 'horizontal'
                        BoxLayout:
                            orientation: 'vertical'
                            Button:
                                text: "0"
                                on_release: root.goCoorner(0)
                            Button:
                                text: "2"
                                on_release: root.goCoorner(2)
                        BoxLayout:
                            orientation: 'vertical'
                            Button:
                                text: "1"
                                on_release: root.goCoorner(1)
                            Button:
                                text: "3"
                                on_release: root.goCoorner(3)

                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'Pen'
                        size_hint: (None, None)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    Button:
                        text: "Lift"
                        on_release: root.pen(0)
                    Button:
                        text: "Drop"
                        on_release: root.pen(1)

                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'Move'
                        size_hint: (None, None)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    BoxLayout:
                        orientation: 'vertical'
                        Button:
                            text: "Up"
                            on_release: root.go(0.0, -1.0)
                        BoxLayout:
                            orientation: 'horizontal'
                            Button:
                                text: "Left"
                                on_release: root.go(-1.0, 0.0)
                            Button:
                                text: "Right"
                                on_release: root.go(1.0, 0.0)
                        Button:
                            text: "Down"
                            on_release: root.go(0.0, 0.0)
            Label:
                id: status_label
                text: ''
                size_hint: (None, 1)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Label:
                text: 'FILE'
                size_hint: (None, None)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Button:
                text: 'Choose...'
                on_release: root.show_load()

            MyButton:
                id: flyover_button
                text: 'FlyOver B-Box'
                enabled: False
                on_release: root.flyover()

            MyButton:
                id: plot_button
                text: 'PLOT'
                enabled: False
                on_release: root.plot()

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        BoxLayout:
            size_hint_y: None
            height: 30

            Button:
                text: 'Icon View'
                on_press: filechooser.view_mode = 'icon'
            Button:
                text: 'List View'
                on_press: filechooser.view_mode = 'list'

        FileChooser:
            id: filechooser
            path: "/media"
            filters: ["*.svg", "*.SVG"]
            on_submit: root.load(filechooser.selection)
            FileChooserIconLayout
            FileChooserListLayout
            
        BoxLayout:
            size_hint_y: None
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.selection)
